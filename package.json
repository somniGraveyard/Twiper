{
  "name": "twiper",
  "version": "0.1.1",
  "main": "src/app.ts",
  "repository": "https://github.com/somnisomni/Twiper",
  "author": "somni <me@somni.one>",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/app.ts",
    "compile-ts": "tsc && tsc-alias",
    "pkg": "pkg -C Brotli .",
    "dist": "rimraf dist && yarn compile-ts && yarn pkg",
    "test": "jest"
  },
  "engines": {
    "node": ">= 16",
    "npm": "use-yarn",
    "yarn": ">= 1.22.0"
  },
  "bin": {
    "pkg": "dist/compile/src/app.js"
  },
  "pkg": {
    "scripts": "dist/compile/**/*.js",
    "outputPath": "dist/pkg",
    "targets": [
      "node16-win-x64",
      "node16-win-arm64",
      "node16-linux-x64",
      "node16-linux-arm64",
      "node16-linuxstatic-x64",
      "node16-linuxstatic-arm64",
      "node16-macos-x64",
      "node16-macos-arm64"
    ],
    "compress": "Brotli"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "command-line-usage": "^6.1.3",
    "open": "^8.4.0",
    "twitter-api-v2": "^1.12.9"
  },
  "devDependencies": {
    "@types/command-line-usage": "^5.0.2",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.7",
    "jest": "^29.3.1",
    "pkg": "^5.8.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
